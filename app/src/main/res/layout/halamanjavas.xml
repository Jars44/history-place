<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background -->

    <!-- Menara Pisa -->

    <!-- Block Hitam Transparan -->

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/zbg" />

    <!-- Judul -->

    <!-- Deskripsi dengan background ic_launcher_shape -->

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="412dp"
        android:layout_height="448dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pisabg" />

    <View
        android:id="@+id/blackBlock"
        android:layout_width="416dp"
        android:layout_height="145dp"
        android:background="@drawable/blacktransparentbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="TOWER OF PISA"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/blackBlock"
        app:layout_constraintEnd_toEndOf="@+id/blackBlock"
        app:layout_constraintStart_toStartOf="@+id/blackBlock"
        app:layout_constraintTop_toBottomOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textDesc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@drawable/ic_launcher_shape"
        android:gravity="top"
        android:padding="12dp"
        android:text="Menara Pisa dibangun pada 1173 sebagai menara lonceng Katedral Pisa di Italia. Tingginya sekitar 56 meter dengan material utama marmer putih. Karena fondasinya berdiri di atas tanah lunak, menara mulai miring bahkan sebelum selesai dibangun. Pekerjaan sempat terhenti lebih dari satu abad karena perang dan masalah teknis, lalu akhirnya rampung pada abad ke-14. Pada abad ke-20, menara diperkuat agar tidak roboh, kemiringannya dikurangi tetapi tetap dipertahankan sebagai ciri khas. Kini Menara Pisa menjadi ikon arsitektur Italia sekaligus Situs Warisan Dunia UNESCO."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="@id/blackBlock"
        app:layout_constraintStart_toStartOf="@id/blackBlock"
        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="424dp"
        android:layout_height="91dp"
        android:layout_marginTop="800dp"
        android:layout_marginEnd="16dp"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/layerbawah" />

    <ImageButton
        android:id="@+id/butonnext"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.794"
        app:layout_constraintStart_toEndOf="@+id/imageButtonHome"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        app:layout_constraintVertical_bias="0.857"
        app:srcCompat="@drawable/img_shadow" />

    <ImageButton
        android:id="@+id/butonprevious"
        android:layout_width="75dp"
        android:layout_height="63dp"
        android:background="@null"
        android:rotation="0"
        android:rotationY="180"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonHome"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonHome"
        app:layout_constraintHorizontal_bias="0.219"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        app:layout_constraintVertical_bias="0.684"
        app:srcCompat="@drawable/img_shadow" />

    <ImageButton
        android:id="@+id/imageButtonHome"
        android:layout_width="124dp"
        android:layout_height="76dp"
        android:layout_marginBottom="4dp"
        android:background="@null"
        android:contentDescription="Home"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView13"
        app:layout_constraintVertical_bias="0.363"
        app:srcCompat="@drawable/homebutton" />

</androidx.constraintlayout.widget.ConstraintLayout>
