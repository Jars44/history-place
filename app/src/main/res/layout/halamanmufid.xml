<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@null">


    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bg"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/bangunanabuabu2"
        android:layout_width="412dp"
        android:layout_height="249dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/outlinetopbottom"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.325"
        app:srcCompat="@drawable/insidecatherdal"
        android:contentDescription="@string/bgabu1"/>

    <ImageView
        android:id="@+id/bangunanabuabu1"
        android:layout_width="179dp"
        android:layout_height="244dp"
        android:background="@drawable/outlinetopbottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375"
        app:srcCompat="@drawable/blackandwhitecatherdal"
        android:contentDescription="@string/bgabu2"/>


    <ImageView
        android:id="@+id/imagewaveatas"
        android:layout_width="416dp"
        android:layout_height="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/wave"
        tools:layout_editor_absoluteY="102dp"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/imagewavebawah"
        android:layout_width="473dp"
        android:layout_height="88dp"
        android:rotationX="180"
        android:rotationY="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/wave"
        tools:layout_editor_absoluteY="407dp"
        android:contentDescription="@null"/>

    <ImageView
        android:id="@+id/bangunannobg"
        android:layout_width="186dp"
        android:layout_height="263dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/nobg"
        android:contentDescription="@string/bangunanpng"/>

    <TextView
        android:id="@+id/judul"
        android:layout_width="415dp"
        android:layout_height="90dp"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/aclonica"
        android:gravity="start"
        android:shadowColor="#80000000"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="14"
        android:text="@string/judul"
        android:textColor="#F5DEB3"
        android:textSize="33sp"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textpenjelasan"
        android:layout_width="168dp"
        android:layout_height="238dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/aclonica"
        android:letterSpacing="0.1"
        android:shadowColor="@color/material_dynamic_neutral0"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="20"
        android:text="@string/penjelasan"
        android:textColor="#FFFFE0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/buttonnext"
        android:layout_width="54dp"
        android:layout_height="62dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/img_shadow"
        android:contentDescription="@string/nxtbtn"/>

    <ImageButton
        android:id="@+id/buttonprevious"
        android:layout_width="54dp"
        android:layout_height="62dp"
        android:background="@null"
        android:rotationY="-180"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/img_shadow"
        android:contentDescription="@string/prvsbtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>
